class Apparel:
    def __init__(self,brand,type,price,instock):
        self.apparelbrand=str(brand)
        self.Type=str(type)
        self.Price=int(price)
        self.inStock=instock

    def __repr__(self):
        return '({},{},â‚¹{},{})'.format(self.apparelbrand,self.Type,self.Price,self.inStock)

class Store:
    def __init__(self,Alist):
        self.apparelList=Alist

    def checkApparelAvailability(self,brand, type,apparelsize,apparelreqd):
        for entry in self.apparelList:
            found=0
            if entry.apparelbrand==brand and entry.Type==type:
                if entry.inStock[apparelsize]==0:
                    print('Sorry, out of stock!')
                    found=1
                elif entry.inStock[apparelsize]-apparelreqd<0:
                    print(f'Only {entry.inStock[apparelsize]} items available.')
                    apparelrequired = int(input('How many quantities: '))
                    ApparelsinStore.checkApparelAvailability(apparelbrandtosearch,appareltypetosearch,apparelsizetosearch,apparelrequired)
                    found = 1

                else:
                    entry.inStock[apparelsize]-=apparelreqd
                    print(f'Inventory after order: {entry.inStock[apparelsize]}')
                    found = 1
                    break

        if found==0:
            print('No such apparel available')


number_apparel=int(input('Number of Apparels: '))

i=0
Alist=list()
while i<number_apparel:
    ASizeAvail={'S':'',
                'M':'',
                'L':''}
    addmore='yes'
    apparelbrand=input('Brand of apparel: ').title()
    Atype=input("Type of apparel: ").title()
    Aprice=input('Apparel Price: ')

    apparelSizeandavailability=input('Apparel availability for sizes S, M, & L (separeted by space): ')
    ASizeAvail['S']=int(apparelSizeandavailability.split(' ')[0])
    ASizeAvail['M'] = int(apparelSizeandavailability.split(' ')[1])
    ASizeAvail['L'] = int(apparelSizeandavailability.split(' ')[2])
    print(ASizeAvail)
    Alist.append(Apparel(apparelbrand,Atype,Aprice,ASizeAvail))

    i+=1
print(Alist)

running=True
while running==True:
    print("\ntype 'exit' to escape")
    apparelbrandtosearch=(input('Search for apparel Brand: ')).title()
    appareltypetosearch=(input('Search for apparel Type: ')).title()
    apparelsizetosearch=(input('Search for apparel size: ')).upper()
    apparelrequired=int(input('How many quantities: '))

    if apparelsizetosearch=='exit' or appareltypetosearch=='exit' or apparelbrandtosearch=='exit':
        running=False
    else:

        ApparelsinStore=Store(Alist)

        availability=ApparelsinStore.checkApparelAvailability(apparelbrandtosearch,appareltypetosearch,apparelsizetosearch,apparelrequired)

